{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "definitions": {
    "contactDetail": {
      "type": "object",
      "properties": {
        "type": {"type": "string"},
        "value": {"type": "string"}
      },
      "required": ["type", "value"]
    },
    "person" :{
      "type": "object",
      "properties": {
        "name" : {"type": "string"},
        "role": {"type": "string"},
        "contactDetails" : {"type": "array", "items": {"$ref": "#/definitions/contactDetail"}}
      },
      "required": ["name"]
    },
    "event": {
      "type": "object",
      "properties": {
        "title": {"type": "string"},
        "location": {"type": "string"},
        "startTime": {"type": "string"},
        "endTime": {"type": "string"}
      },
      "required": ["title", "location", "start_time", "end_time"]
    },
    "subEvent": {
      "type": "object",
      "allOf": [
        {"$ref": "#/definitions/event"},
        {
          "properties": {
            "description": {"type": "string"},
            "type": {"type": "string"},
            "people": {"type": "array", "items": {"$ref": "#/definitions/person"}}
          },
          "required": ["people"]
        }
      ]
    }
  },

  "title": "Conference",
  "description": "A product from Acme's catalog",
  "type": "object",
  "allOf": [
    {"$ref": "#/definition/event"},
    {
      "properties": {
        "organiser": {"type": "string"},
        "subEvents": {"type": "array", "items": {"$ref": "#/definitions/subEvent"}}
      }
    }
  ]
}