{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "contactDetail": {
      "type": "object",
      "properties": {
        "type": {"type": "string"},
        "value": {"type": "string"}
      },
    },
    "person" :{
      "type": "object",
      "properties": {
        "name" : {"type": "string"},
        "role": {"type": "string"},
        "contactDetails" : {"type": "array", "items": {"$ref": "#/definitions/contactDetail"}}
      }
    },
    "event": {
      "type": "object",
      "properties": {
        "title": {"type": "string"},
